<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parentLayout"
    tools:context="com.tantransh.workshopapp.jobbooking.SpareRepairingActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:onClick="back"
                    android:layout_marginLeft="5dp"
                    android:tint="@color/white"
                    android:src="@drawable/back_icon"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <LinearLayout
                    android:layout_marginRight="35dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="3dp"
                        android:textSize="18sp"
                        android:text="Job Booking"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView

                        android:textStyle="normal"
                        android:gravity="center"
                        android:padding="0dp"
                        android:textSize="14sp"
                        android:text="( Job Information )"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </android.support.design.widget.AppBarLayout>
        <LinearLayout
            android:paddingLeft="12dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:textSize="11sp"
                android:text="Spare Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView

                android:textSize="11sp"
                android:text="Amount"
                android:layout_width="118dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_border2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/spareSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"></Spinner>
            </LinearLayout>

            <EditText
                android:id="@+id/qtyET"
                android:hint="0"
                android:gravity="center"
                android:inputType="number"
                android:padding="5dp"
                android:textSize="12sp"
                android:layout_margin="2dp"
                android:background="@drawable/rounded_corner_border2"
                android:layout_width="50dp"
                android:layout_height="45dp" />

            <EditText
                android:gravity="center"
                android:id="@+id/amtET"
                android:hint="0.00"
                android:inputType="numberDecimal"
                android:padding="5dp"
                android:textSize="12sp"
                android:layout_margin="2dp"
                android:background="@drawable/rounded_corner_border2"
                android:layout_width="80dp"
                android:layout_height="45dp" />


            <Button
                android:onClick="addSpareInJobList"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:background="@drawable/circle2"
                android:textSize="18sp"
                android:layout_margin="2dp"
                android:text="+"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="45dp"
                android:layout_height="45dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/gray0"
                android:background="@color/colorAccent"
                android:padding="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Spare Parts List"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:padding="5dp"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <TextView
                    android:padding="3dp"
                    android:gravity="center"

                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="Sr.No."
                    android:layout_width="45dp"
                    android:layout_height="match_parent" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/background"/>
                <TextView
                    android:padding="3dp"
                    android:gravity="center"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="Spare Name"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/background"/>
                <TextView
                    android:padding="3dp"
                    android:gravity="center"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="Make"
                    android:layout_weight="1.4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/background"/>
                <TextView
                    android:padding="3dp"
                    android:gravity="center"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="Qty"
                    android:layout_weight="1.5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/spareListRV"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <Button
            android:onClick="cancel"
            android:background="@android:color/transparent"
            android:textColor="@color/gray0"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="Cancel"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:onClick="moveNext"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="Next"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>
