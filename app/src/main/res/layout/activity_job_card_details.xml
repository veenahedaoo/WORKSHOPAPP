<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jobcard.JobCardDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/job_card_information"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_margin="5dp"/>
            </LinearLayout>
        </android.support.design.widget.AppBarLayout>
        <ScrollView
            android:id="@+id/cardSV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="@string/to"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="50dp"
                        android:textStyle="bold"
                        android:id="@+id/customerNameTV"
                        android:layout_marginStart="30dp"
                        android:text="@string/customer_name"
                        android:textColor="#000000"
                         />
                    <TextView
                        android:layout_marginEnd="50dp"
                        android:layout_marginStart="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/customer_contact"
                        android:textStyle="bold"
                        android:id="@+id/customerContactTV"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="50dp"
                        android:id="@+id/addressTV"
                        android:textStyle="bold"
                        android:layout_marginStart="30dp"
                        android:text="@string/customer_address"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_marginEnd="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:id="@+id/cityandPinTV"
                        android:textStyle="bold"
                        android:text="@string/city_pin"
                        android:textColor="#000000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="7dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/job_card_number"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:textColor="@color/gray2"/>
                        <TextView
                            android:id="@+id/jobcardNumberTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/job_card_number"
                            android:textSize="13sp"
                            android:padding="6dp"
                            android:textStyle="bold"
                            android:textColor="#454343"
                            android:background="@drawable/square_border1"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="7dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/vehicle_registration_number"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:textColor="@color/gray2"/>
                        <TextView
                            android:id="@+id/vehicleRegsTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/sample_veh_no"
                            android:textSize="14sp"
                            android:padding="6dp"
                            android:textStyle="bold"
                            android:textColor="#454343"
                            android:background="@drawable/square_border1"/>

                    </LinearLayout>




                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="7dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/chassis_number"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:textColor="@color/gray2"/>
                        <TextView
                            android:id="@+id/chassisNumberTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/chassis_number"
                            android:textSize="14sp"
                            android:padding="6dp"
                            android:textStyle="bold"
                            android:textColor="#454343"
                            android:background="@drawable/square_border1"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="7dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/engine_number"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:textColor="@color/gray2"/>
                        <TextView
                            android:id="@+id/engineNumberTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/engine_number"
                            android:textSize="14sp"
                            android:padding="6dp"
                            android:textStyle="bold"
                            android:textColor="#454343"
                            android:background="@drawable/square_border1"/>

                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="7dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/make"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:textColor="@color/gray2"/>
                        <TextView
                            android:id="@+id/makeTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/make"
                            android:textSize="14sp"
                            android:padding="6dp"
                            android:textStyle="bold"
                            android:textColor="#454343"
                            android:background="@drawable/square_border1"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="7dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/model"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:textColor="@color/gray2"/>
                        <TextView
                            android:id="@+id/modelTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/model"
                            android:textSize="14sp"
                            android:padding="6dp"
                            android:textStyle="bold"
                            android:textColor="#454343"
                            android:background="@drawable/square_border1"/>

                    </LinearLayout>




                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="7dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/model_year"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:textColor="@color/gray2"/>

                        <TextView
                            android:id="@+id/modelYearTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/square_border1"
                            android:padding="6dp"
                            android:text="@string/model_year"
                            android:textColor="#454343"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="7dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/kilometer_reading"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:textColor="@color/gray2"/>
                        <TextView
                            android:id="@+id/mileageTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/kilometer_reading"
                            android:textSize="14sp"
                            android:padding="6dp"
                            android:textStyle="bold"
                            android:textColor="#454343"
                            android:background="@drawable/square_border1"/>

                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="7dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/booking_date"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:textColor="@color/gray2"/>
                        <TextView
                            android:id="@+id/bookingDateTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/booking_date"
                            android:textSize="14sp"
                            android:padding="6dp"
                            android:textStyle="bold"
                            android:textColor="#454343"
                            android:background="@drawable/square_border1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="7dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/last_service_date"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:textColor="@color/gray2"/>
                        <TextView
                            android:id="@+id/previousBookingDateTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/last_service_date"
                            android:textSize="14sp"
                            android:padding="6dp"
                            android:textStyle="bold"
                            android:textColor="#454343"
                            android:background="@drawable/square_border1"/>

                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="7dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/rep_name"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:textColor="@color/gray2"/>
                        <TextView
                            android:id="@+id/customerRepresentativeNameTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/rep_name"
                            android:textSize="14sp"
                            android:padding="6dp"
                            android:textStyle="bold"
                            android:textColor="#454343"
                            android:background="@drawable/square_border1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="7dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/rep_contact"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:textColor="@color/gray2"/>
                        <TextView
                            android:id="@+id/representativeContactTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/rep_contact"
                            android:textSize="14sp"
                            android:padding="6dp"
                            android:textStyle="bold"
                            android:textColor="#454343"
                            android:background="@drawable/square_border1"/>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="7dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/attended_by"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:textColor="@color/gray2"/>
                        <TextView
                            android:id="@+id/attendedByTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/attended_by"
                            android:textSize="14sp"
                            android:padding="6dp"
                            android:textStyle="bold"
                            android:textColor="#454343"
                            android:background="@drawable/square_border1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="7dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/job_status"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:textColor="@color/gray2"/>
                        <TextView
                            android:id="@+id/jobStatusTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/job_status"
                            android:textSize="14sp"
                            android:padding="6dp"
                            android:textStyle="bold"
                            android:textColor="#454343"
                            android:background="@drawable/square_border1"/>

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sparesLLO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="7dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/spares_list"
                        android:background="@color/gray2"
                        android:textColor="#ffffff"
                        android:padding="7dp"
                        android:textStyle="bold"
                        android:textSize="14sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/gray1">
                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:text="@string/sr_no"
                            android:textColor="#000000"/>
                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="#000000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:text="@string/spare_name"
                            android:textColor="#000000"/>
                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="#000000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1.4"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:text="@string/make"
                            android:textColor="#000000"/>
                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="#000000"/>
                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:text="@string/qty"
                            android:textColor="#000000"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spareListLL"
                        android:orientation="vertical">

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/serviceLLO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="7dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/service_list"
                        android:background="@color/gray2"
                        android:textColor="#ffffff"
                        android:padding="7dp"
                        android:textStyle="bold"
                        android:textSize="14sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/gray1">
                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:text="@string/sr_no"
                            android:textColor="#000000"/>
                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="#000000"/>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:text="@string/service_name"
                            android:textColor="#000000"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/labourListLL"
                        android:orientation="vertical"
                        tools:ignore="TooManyViews">

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/note"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/noteTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="7dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/invoice_details"
                        android:background="@color/gray2"
                        android:textColor="#ffffff"
                        android:padding="7dp"
                        android:textStyle="bold"
                        android:textSize="14sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/invoiceDetailsLL"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/total_amount"
                        android:padding="10dp"
                        android:background="@drawable/square_border1"
                        android:layout_weight="1"
                        android:textColor="@color/gray2"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/totalAmountTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_amt"
                        android:background="@drawable/square_border1"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:textColor="@color/gray2"
                        android:textStyle="bold"
                        />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:background="#3d000000"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/pdLLO"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="10dp"
            android:gravity="center"
            android:text="@string/loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>