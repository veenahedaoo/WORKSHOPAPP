                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="mileage"
                            android:textSize="14sp"
                            android:padding="6dp"
                            android:textStyle="bold"
                            android:textColor="#454343"
                            android:background="@drawable/square_border1"/>

                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
