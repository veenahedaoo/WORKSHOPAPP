                            android:layout_height="wrap_content"
                            android:text="cust rep. contact"
                            android:textSize="14sp"
                            android:padding="6dp"
                            android:textStyle="bold"
                            android:textColor="#454343"
                            android:background="@drawable/square_border1"/>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="7dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Attended By"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:textColor="@color/gray2"/>
                        <TextView
                            android:id="@+id/attendedByTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="attended by"
                            android:textSize="14sp"
                            android:padding="6dp"
                            android:textStyle="bold"
                            android:textColor="#454343"
                            android:background="@drawable/square_border1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="7dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Job Status"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:textColor="@color/gray2"/>
                        <TextView
                            android:id="@+id/jobStatusTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="job status"
                            android:textSize="14sp"
                            android:padding="6dp"
                            android:textStyle="bold"
                            android:textColor="#454343"
                            android:background="@drawable/square_border1"/>

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sparesLLO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="7dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Spares List"
                        android:background="@color/gray2"
                        android:textColor="#ffffff"
                        android:padding="7dp"
                        android:textStyle="bold"
                        android:textSize="14sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/gray1">
                        <TextView
                            android:layout_weight="1.2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Item"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:textColor="#000000"/>
                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="#000000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Spares"
                            android:layout_weight="1"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:textColor="#000000"/>
                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
