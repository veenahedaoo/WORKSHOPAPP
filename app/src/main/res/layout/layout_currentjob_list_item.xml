<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardMaxElevation="10dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="5dp"
        android:padding="10dp">
    <LinearLayout
        android:background="@drawable/square_border1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/jobCardTV"
                android:layout_width="80dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="0"
                android:paddingTop="20dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#0a0909"
                android:layout_height="80dp"
                android:background="@drawable/card1"
                android:backgroundTint="@color/gray2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MH40AG1035"
                android:id="@+id/vehicleRegNoTV"
                android:textColor="#615f5f"
                android:padding="5dp"
                android:textStyle="normal"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hero Maestro"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/makeModelTV"
                android:textSize="14sp"
                android:textColor="#000000"/>
            <ProgressBar
                android:layout_margin="10dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="25"
                android:id="@+id/statusprogressPB"
                android:progressTint="@color/orange"/>
            <TextView
                android:id="@+id/jobStatusTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Progress Status"
                android:padding="0dp"
                android:layout_marginLeft="5dp"
                android:textSize="13sp"
                android:textColor="@color/gray2"/>

        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray2"
            >

        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="10dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Name "
                android:textSize="12sp"
                android:textColor="#605f5f"
                android:textStyle="normal"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                android:layout_marginTop="2dp"
                android:background="@drawable/square_border1"
                android:padding="5dp"
                android:textStyle="bold"
                android:id="@+id/customerNameTV"
                />
            <TextView
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Contact Number "
                android:textSize="12sp"
                android:textColor="#605f5f"
                android:textStyle="normal"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1234567891"
                android:layout_marginTop="2dp"
                android:background="@drawable/square_border1"
                android:padding="5dp"
                android:textStyle="bold"
                android:id="@+id/customerContactNoTV"
                />
            <Button
                android:id="@+id/viewmoreBTN"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:text="View more"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:textColor="@color/blue"/>

        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>